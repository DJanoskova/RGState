    "state",
    "global",
    "management",
    "simple"
  ],
  "main": "./lib/cjs/index.js",
  "module": "./lib/esm/index.js",
  "types": "./lib/esm/index.d.ts",
  "dependencies": {
    "object-deep-recreate": "^1.0.1",
    "uuid": "^8.3.2"
  },
  "devDependencies": {
    "@types/react": "^18.0.15",
    "@types/uuid": "^8.3.4",
    "react": "^18.2.0",
    "typescript": "^4.7.4"
  },
  "peerDependencies": {
    "react": ">=18",
    "uuid": "^8.3.2"
  }
}
